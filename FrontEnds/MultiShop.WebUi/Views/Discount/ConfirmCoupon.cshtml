@{
    decimal value = ViewBag.ShoppingCart;
    decimal result = value + ((value / 100) * 10);
}

<div class="col-lg-4">
    <form class="mb-30" method="post" asp-action="ConfirmCoupon" asp-controller="Discount">
        <div class="input-group">
            <input type="text" class="form-control border-0 p-4" name="code" placeholder="Kupon Kodu" required>
            <span style="color:red">@ViewBag.errorCode</span>
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Kupon Uygula</button>
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Toplam Sepet Tutarı</h6>
                <h6> @value.ToString("N2") </h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">Kdv</h6>
                <h6 class="font-weight-medium">%10</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>Ödenecek Tutar</h5>
                <h5>
                
                        @result.ToString("N2");

                </h5>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödemeyi Tamamla</button>
        </div>
    </div>
</div>
