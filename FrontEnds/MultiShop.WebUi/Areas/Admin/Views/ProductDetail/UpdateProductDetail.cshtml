@model GetProductDetailByIdDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablo İşlemleri</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Ana Sayfa</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Ürün Detaları</li>
            <li class="active"><i class="fa fa-envelope"></i>Güncelleme</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Ürün Bilgileri Güncelleme</h4>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <input type="hidden" asp-for="ProductPreviewID" />
                                    <br />
                                    <label>Bilgi</label>
                                    <textarea asp-for="Info" class="form-control" rows="5"></textarea>
                                   
                                </fieldset>
                                <fieldset class="form-group">
                                    <br />
                                    <label>Açıklama </label>
                                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                                </fieldset>
                                <fieldset class="form-group">
                                    <br />
                                    <input type="hidden" asp-for="ProductID">
                                </fieldset>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Güncelle</button>
                        <a href="/Admin/Product/ProductList" class="btn btn-secondary">Vazgeç</a>

                    </form>

                </div>
            </div>
        </div>
    </section>
    <!-- content -->
</div>

