@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablo İşlemleri</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Ana Sayfa</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Ürünler</li>
            <li class="active"><i class="fa fa-envelope"></i> Yeni Ürün</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Kategori Ekleme</h4>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <input class="form-control" id="basicInput" type="text" placeholder="Ürün Adı" asp-for="ProductName">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    
                                    <input class="form-control" id="basicInput" type="number" placeholder="Ürün Fiyatı" asp-for="Price">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <input class="form-control" id="basicInput" type="text" placeholder="Ürün Görsel Linki" asp-for="ProductImageUrl">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categorias,new {@class="form form-control"})
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <textarea class="form-control" rows="5" placeholder="Ürün Açıklaması" asp-for="ProductDescription"></textarea>
                                </fieldset>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Kaydet</button>
                        <a href="/Admin/Category/CategoryList" class="btn btn-secondary">Vazgeç</a>

                    </form>

                </div>
            </div>
        </div>
    </section>
    <!-- content -->
</div>

