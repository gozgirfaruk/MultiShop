
@model UpdateFeatureSliderDto
@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablo İşlemleri</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Ana Sayfa</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Öne Çıkan</li>
            <li class="active"><i class="fa fa-envelope"></i> Görsel Güncelleme</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Öne Çıkan Görseli Güncelleme</h4>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <input type="hidden" asp-for="FeatureSliderId"/>
                                    <label id="basicInput">Görsel Başlığı</label>
                                    <input class="form-control" id="basicInput" type="text" placeholder="Görsel Başlığı" asp-for="Title">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <label id="basicInput">Görsel Açıklama</label>
                                    <input class="form-control" id="basicInput" type="text" placeholder="Görsel Açıklama" asp-for="Description">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <label id="basicInput">Görsel Linki</label>
                                    <input class="form-control" id="basicInput" type="text" placeholder="Görsel Link" asp-for="ImageUrl">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <label id="basicInput" >Görsel Durumu</label>
                                    <input class="form-control" id="basicInput" type="checkbox" asp-for="Status">
                                </fieldset>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-default">Kaydet</button>
                        <a href="/Admin/FeatureSlider/Index" class="btn btn-secondary">Vazgeç</a>

                    </form>

                </div>
            </div>
        </div>
    </section>
    <!-- content -->
</div>



