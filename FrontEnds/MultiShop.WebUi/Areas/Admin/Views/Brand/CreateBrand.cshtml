@model CreateBrandDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablo İşlemleri</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Ana Sayfa</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Marka</li>
            <li class="active"><i class="fa fa-envelope"></i>Oluşturma</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Marka Ekleme</h4>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <label>Marka Adı</label>
                                    <input class="form-control" placeholder="Kategori Adı" asp-for="BrandName">
                                </fieldset>
                                <fieldset class="form-group">
                                    <br />
                                    <label>Marka Logo</label>
                                    <input class="form-control" placeholder="Kategori Görsel" asp-for="BrandImage">
                                </fieldset>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Kaydet</button>
                        <a href="/Admin/Brand/BrandList" class="btn btn-secondary">Vazgeç</a>

                    </form>

                </div>
            </div>
        </div>
    </section>
    <!-- content -->
</div>