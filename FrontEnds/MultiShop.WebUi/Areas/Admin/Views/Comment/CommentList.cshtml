@model List<ResultCommentDto>
@{
    ViewData["Title"] = "CommentList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Gelen Yorumlar</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Ana Sayfa</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Tablolar</li>
            <li class="active"><i class="fa fa-table"></i> Yorum Listesi</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Yorum Listesi</h4>
                    <div id="example_filter" class="dataTables_filter pull-right">
                
                    </div>
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th class="sortable">ID</th>
                                <th class="sortable">Kullanıcı</th>
                                <th class="sortable">Yorum</th>
                                <th class="sortable">Tarih</th>
                                <th class="sortable">Durum</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>

                                <td class="text-truncate">@count</td>
                                <td class="text-truncate">
                                    <img src="@item.ImageUrl" style="height:75px; width:75px; border-radius:15px;" />
                                    @item.NameSurname
                                </td>
                                <td class="text-truncate">@item.CommentDetail</td>
                                <td class="text-truncate">@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                <td class="text-truncate">@item.Status</td>
                                <td><a href="/Admin/Comment/GetCommentById/@item.UserCommentId" class="btn btn-warning">Güncelle</a></td>
                                <td><a href="/Admin/Comment/DeleteComment/@item.UserCommentId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }

                    </table>
                    
                </div>
            </div>
        </div>
    </section>
    <!-- content -->
</div>

