@model GetAboutByIdDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablo İşlemleri</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Ana Sayfa</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Hakkımızda</li>
            <li class="active"><i class="fa fa-envelope"></i>Güncelleme</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Hakkımızda Güncelleme</h4>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <input type="hidden" asp-for="AboutId" />
                                    <br />
                                    <label>Açıklama</label>
                                    <input class="form-control" asp-for="Description">
                                </fieldset>
                                <fieldset class="form-group">
                                    <br />
                                    <label>Konum</label>
                                    <input class="form-control"  asp-for="Address">
                                </fieldset>
                                <fieldset class="form-group">
                                    <br />
                                    <label>E-Posta</label>
                                    <input class="form-control" type="email" asp-for="Email">
                                </fieldset>
                                <fieldset class="form-group">
                                    <br />
                                    <label>Telefon</label>
                                    <input type="tel" class="form-control" asp-for="Phone">
                                </fieldset>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Güncelle</button>
                        <a href="/Admin/About/AboutList" class="btn btn-secondary">Vazgeç</a>

                    </form>

                </div>
            </div>
        </div>
    </section>
    <!-- content -->
</div>

