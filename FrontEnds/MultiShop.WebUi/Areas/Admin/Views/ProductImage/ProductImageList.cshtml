@model UpdateProductImageDto
@{
    ViewData["Title"] = "ProductImageList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablo İşlemleri</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Ana Sayfa</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Ürün Görselleri</li>
            <li class="active"><i class="fa fa-envelope"></i>Güncelleme</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Ürün Görselleri Güncelleme</h4>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">

                                    <input type="hidden" asp-for="ProductImageID" />
                                </fieldset>
                                <fieldset class="form-group">
                                    <label>Ürün Görseli 1</label>
                                    <br />
                                    <img src="@Model.Image2" style="width:120px; height:120px; border-radius:15px;" />
                                   @*  <input class="form-control" placeholder="Kategori Adı" asp-for="Image1"> *@
                                </fieldset>
                                <fieldset class="form-group">
                                    <label>Ürün Görseli 2</label>
                                    <br />
                                    <img src="@Model.Image3" style="width:120px; height:120px; border-radius:15px;" />
                                   @*  <input class="form-control" placeholder="Kategori Adı" asp-for="Image1"> *@

                                </fieldset>
                                <fieldset class="form-group">
                                    <label>Ürün Görseli 3</label>
                                    <br />
                                    <img src="@Model.Image3" style="width:120px; height:120px; border-radius:15px;" />
                                 @*    <input class="form-control" placeholder="Kategori Görsel" asp-for="Image3"> *@
                                </fieldset>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Güncelle</button>
                        <a href="/Admin/Product/ProductList" class="btn btn-secondary">Vazgeç</a>

                    </form>

                </div>
            </div>
        </div>
    </section>
    <!-- content -->
</div>

