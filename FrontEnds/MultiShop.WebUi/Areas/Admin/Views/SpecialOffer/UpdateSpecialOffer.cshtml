@model UpdateSpecialOfferDto
@{
    ViewData["Title"] = "UpdateSpecialOffer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablo İşlemleri</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Ana Sayfa</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Katalog</li>
            <li class="active"><i class="fa fa-envelope"></i> Güncelleme</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>Katalog Güncelleme Sayfası</h4>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <input type="hidden" asp-for="SpecialOfferId"/>
                                    <input class="form-control" id="basicInput" type="text" placeholder="Katalog Başlığı" asp-for="Title">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <input class="form-control" id="basicInput" type="text" placeholder="Katalog Açıklama" asp-for="SubTitle">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset class="form-group">
                                    <br />
                                    <input class="form-control" id="basicInput" type="text" placeholder="Katalog Görsel" asp-for="ImageUrl">
                                </fieldset>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Kaydet</button>
                        <a href="/Admin/SpecialOffer/Index" class="btn btn-secondary">Vazgeç</a>

                    </form>

                </div>
            </div>
        </div>
    </section>
    <!-- content -->
</div>